@{
    ViewData["Title"] = "Forgot Password";
}

<script>

            document.addEventListener('DOMContentLoaded', function() {
        const inputs = document.querySelectorAll('.input100');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.nextElementSibling.classList.add('active');
            });
            input.addEventListener('blur', function() {
                if (this.value === '') {
                    this.nextElementSibling.classList.remove('active');
                }
            });
        });
    });

</script>


<style>

    body {
        font-family: Poppins-Regular, sans-serif;
        background: #f2f2f2; /* Keeping the light background for the body */
    }

    .limiter {
        width: 100%;
        margin: 0 auto;
    }

    .container-login100 {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        padding: 15px;
        /* Set the background image */
        background-image: url('../uploads/values2.jpg'); /* Adjust the path as necessary */
        background-size: cover; /* This will make the image cover the entire container */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
    }

    .wrap-login100 {
        width: 500px;
        background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background for the form */
        border-radius: 10px;
        overflow: hidden;
        padding: 55px 55px 37px 55px;
        border: 2px solid rgb(44, 62, 80);
    }

    .login100-form-title {
        font-family: Poppins-Medium;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        display: block;
    }

    .wrap-input100 {
        position: relative;
        width: 100%;
        z-index: 1;
        margin-bottom: 10px;
    }

    .input100 {
        font-family: Poppins-Regular;
        font-size: 15px;
        color: #666666;
        line-height: 1.2;
        display: block;
        width: 100%;
        height: 45px;
        background: transparent;
        padding: 0 5px;
        border: none;
        outline: none;
    }

    .focus-input100-1, .focus-input100-2 {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
    }

        .focus-input100-1::before, .focus-input100-2::before {
            content: "";
            display: block;
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: rgb(44, 62, 80); /* Changed to dark blue */
            -webkit-transition: all 0.4s;
            -o-transition: all 0.4s;
            -moz-transition: all 0.4s;
            transition: all 0.4s;
        }

        .focus-input100-1::after, .focus-input100-2::after {
            content: "";
            display: block;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 1px;
            background: #cccccc;
        }

    .input100:focus + .focus-input100-1::before, .input100:focus + .focus-input100-2::before {
        width: 100%;
    }

    .login100-form-btn {
        font-family: Poppins-Medium;
        font-size: 16px;
        color: #fff;
        line-height: 1.2;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 20px;
        min-width: 120px;
        height: 50px;
        border-radius: 25px;
        background: rgb(44, 62, 80); /* Changed to dark blue */
        position: relative;
        z-index: 1;
        border: none;
        outline: none;
        cursor: pointer;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
    }

        .login100-form-btn::before {
            content: "";
            display: block;
            position: absolute;
            z-index: -1;
            width: 100%;
            height: 100%;
            border-radius: 25px;
            background: #4B0082; /* A darker shade of blue for hover effect */
            top: 0;
            left: 0;
            opacity: 0;
            -webkit-transition: all 0.4s;
            -o-transition: all 0.4s;
            -moz-transition: all 0.4s;
            transition: all 0.4s;
        }

        .login100-form-btn:hover::before {
            opacity: 1;
        }

    .txt1, .txt2 {
        font-family: Poppins-Regular;
        font-size: 14px;
        line-height: 1.5;
        color: #666666;
    }

    .txt2 {
        color: rgb(44, 62, 80); /* Changed to dark blue */
        text-decoration: underline;
    }

    .hov1:hover {
        color: #4B0082; /* A darker shade of blue for hover effect */
    }

</style>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                <form class="login100-form validate-form" asp-action="ForgotPassword" method="post">
                    <span class="login100-form-title p-b-33">
                        Forgot Password
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="email" name="email" placeholder="Email" required>
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <button class="login100-form-btn" type="submit">
                            Reset Password
                        </button>
                    </div>

                    <div class="text-center p-t-45 p-b-4">
                        <span class="txt1">
                            Remember your password?
                        </span>
                        <a href="Login" class="txt2 hov1">
                            Sign In
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="script.js"></script>