@model CartViewModel
      
@{
    ViewData["Title"] = "Your Cart";
}
      
<section class="shopping-cart">
    <h1>Your Cart</h1>
           
    @if (Model.Items.Any())
    {
        <div class="cart-container">
            <div class="cart-items">
                @foreach (var item in Model.Items)
                {
                    <div class="cart-item">
                        <img src="@item.ImageUrl" alt="@item.ProductName">
                        <div class="item-details">
                            <h3>@item.ProductName</h3>
                            <p class="item-price">@item.Price.ToString("C")</p>
                            <div class="item-quantity">
                                <button class="qty-btn minus" data-id="@item.Id">-</button>
                                <input type="number" value="@item.Quantity" min="1">
                                <button class="qty-btn plus" data-id="@item.Id">+</button>
                            </div>
                        </div>
                        <div class="item-total">@((item.Price * item.Quantity).ToString("C"))</div>
                        <button class="item-remove" data-id="@item.Id">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                }
            </div>
                   
            <div class="cart-summary">
                <h3>Order Summary</h3>
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>@Model.Subtotal.ToString("C")</span>
                </div>
                <div class="summary-row">
                    <span>Delivery</span>
                    <span>@Model.DeliveryFee.ToString("C")</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span>@Model.Total.ToString("C")</span>
                </div>
                      
                <a href="/checkout" class="btn btn-primary btn-checkout">Proceed to Checkout</a>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <img src="~/images/empty-cart.png" alt="Empty Cart">
            <h3>Your cart is empty</h3>
            <a href="/products" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
</section>
       
@section Scripts {
    <script>
        // Cart interaction scripts from earlier
    </script>
}